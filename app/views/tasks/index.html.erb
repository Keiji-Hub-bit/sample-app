<h1><%= current_user.name %>のタスク一覧</h1>
	
<div class = "row">
  <div class="col-md-10 col-md-offset-1">
     <a class="btn btn-lg btn-primary pull-right" href="/users/<%=current_user.id %>/tasks/new">タスク新規作成</a>
     <%= will_paginate %>
     <table class="table table-hover" id="table-tasks">
        <thead>
        <tr>
              <th>名称</th>
              <!--<th><input type ="hidden" 詳細></th>-->
              <th>作成日</th>
              <th></th>
        </tr>
      </thead>
       <tbody>
         <% @tasks.each do |task| %>
         <tr>
              <td><%= link_to task.name,user_task_path(@user,task) %></td>
              <!--<td><input type ="hidden"<%= task.description %>></td-->
              <td><%= l task.created_at %></td>
              <td></td>
              <td>
                  <%= link_to "編集",edit_user_task_path(@user,task),class: "btn btn-success"%>
                  <!--<a class="btn btn-success " href="/tasks/:id/edit(:user_id)">編集</a>-->
                  <%= link_to "削除",user_task_path(@user,task), method: :delete,  data: { confirm: "#{task.name}を削除します。よろしいですか？" }, class: "btn btn-danger"%>
                  <!--<a data-confirm="「10月17日」を削除します。よろしいですか？" class="btn btn-danger" rel="nofollow" data-method="delete" href="/users/1/tasks/857">削除</a>-->
                  <!--<a class="btn btn-danger " rel="nofollow" data-method="delete" href="/tasks/">削除</a>-->
              </td>
         </tr>
        <% end %>
       </tbody>
      </table>
      <%= will_paginate %>
  </div>
</div>