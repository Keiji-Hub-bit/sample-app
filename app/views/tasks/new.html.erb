<h1>タスク新規作成</h1>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
   
    <%= form_with(model: @task, url: user_tasks_path, local:true)do |f|%>
    <%= f.hidden_field :user_id, :value => current_user.id %>
           
           
          <% if @task.errors.any? %>
              <div id="error_explanation">
                 <div class="alert alert-danger">
                   入力エラーが<%= @task.errors.count %>件あります。
                    <!--The form contains <%= pluralize(@task.errors.count, "error") %>.-->
                </div>
                <ul>
                <% @task.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
                </ul>
             </div>
          <% end %>
          
          <%= f.label :name, class: "label-form" %>
          <%= f.text_field :name, class:"form-control" %>
          
          <%= f.label :description, class: "label-form" %>
          <%= f.text_area  :description,  class:"form-control",rows:5  %>
          <!--<textarea rows="5" class="form-control" name=task[description]></textarea>-->
                                                          
          <%= f.submit "新規登録", class: "btn btn-lg btn-primary btn-form" %>
     <% end %>
  </div>
</div>